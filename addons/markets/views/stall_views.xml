<odoo>
    <!-- Stall Tree View -->
    <record id="view_stall_tree" model="ir.ui.view">
        <field name="name">kst.stall.tree</field>
        <field name="model">kst.stall</field>
        <field name="arch" type="xml">
            <tree string="Stalls">
                <field name="market_id"/>
                <field name="code"/>
                <field name="tenant_id"/>
                <field name="utility_account_id"/>
                <field name="rental_rate"/>
                <field name="default_electricity_rate"/>
                <field name="default_water_rate"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <!-- Stall Form View -->
    <record id="view_stall_form" model="ir.ui.view">
        <field name="name">kst.stall.form</field>
        <field name="model">kst.stall</field>
        <field name="arch" type="xml">
            <form string="Stall">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="market_id"/>
                            <field name="code"/>
                            <field name="tenant_id"/>
                            <field name="utility_account_id"/>
                            <field name="is_active"/>
                            <field name="need_or"/>
                        </group>
                        <group string="Rates">
                            <field name="rental_rate"/>
                            <field name="default_electricity_rate"/>
                            <field name="default_water_rate"/>
                            <field name="rent_collection_type"/>
                        </group>
                    </group>
                    <group>
                        <group string="Utility Pay Types">
                            <field name="electric_pay_type_id"/>
                            <field name="water_pay_type_id"/>
                        </group>
                        <group string="Utility Information">
                            <field name="meralco_account_number"/>
                            <field name="electricity_sub_meter_number"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="All Rent Transactions">
                            <field name="rent_transaction_ids">
                                <tree>
                                    <field name="transaction_date"/>
                                    <field name="rent_paid"/>
                                    <field name="receipt_number"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Utility Transactions">
                            <field name="utility_transaction_ids">
                                <tree>
                                    <field name="transaction_date"/>
                                    <field name="utility_type"/>
                                    <field name="consumption"/>
                                    <field name="amount_due"/>
                                    <field name="amount_paid"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group string="Payment Summary">
                            <field name="total_paid"/>
                            <field name="total_copb_due"/>
                            <field name="last_payment_date"/>
                            <field name="next_payment_date"/>
                        </group>
                        <group string="Audit Trail">
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created Date" readonly="1"/>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Stall Search View -->
    <record id="view_stall_search" model="ir.ui.view">
        <field name="name">kst.stall.search</field>
        <field name="model">kst.stall</field>
        <field name="arch" type="xml">
            <search string="Stalls">
                <field name="code"/>
                <field name="market_id"/>
                <field name="tenant_id"/>
                <field name="utility_account_id"/>
                <filter name="active" string="Active" domain="[('is_active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('is_active', '=', False)]"/>
                <group expand="0">
                    <filter name="group_by_market" string="Market" context="{'group_by':'market_id'}"/>
                    <filter name="group_by_tenant" string="Tenant" context="{'group_by':'tenant_id'}"/>
                    <filter name="group_by_utility_account" string="Utility Account" context="{'group_by':'utility_account_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Stall Kanban View -->
    <record id="view_stall_kanban" model="ir.ui.view">
        <field name="name">kst.stall.kanban</field>
        <field name="model">kst.stall</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="display_name"/>
                <field name="market_id"/>
                <field name="code"/>
                <field name="tenant_id"/>
                <field name="rental_rate"/>
                <field name="is_active"/>
                <field name="rent_collection_type"/>
                <field name="total_paid"/>
                <field name="total_copb_due"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="is_active" widget="boolean_toggle"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="text-muted">Tenant:</span>
                                        <strong><field name="tenant_id"/></strong>
                                    </div>
                                    <div class="mt-2">
                                        <span class="text-muted">Rent:</span>
                                        <strong>₱<field name="rental_rate"/></strong>
                                        <span class="text-muted ml-2">(<field name="rent_collection_type"/>)</span>
                                    </div>
                                    <div class="mt-2" t-if="record.total_paid.raw_value or record.total_copb_due.raw_value">
                                        <div>
                                            <small class="text-muted">Paid: </small>
                                            <strong class="text-success">₱<field name="total_paid"/></strong>
                                        </div>
                                        <div>
                                            <small class="text-muted">COPB Due: </small>
                                            <strong class="text-danger" t-if="record.total_copb_due.raw_value > 0">₱<field name="total_copb_due"/></strong>
                                            <strong class="text-success" t-if="record.total_copb_due.raw_value == 0">₱0.00</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Stall Action -->
    <record id="action_stall" model="ir.actions.act_window">
        <field name="name">Stalls</field>
        <field name="res_model">kst.stall</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': True}</field>
    </record>
</odoo>

