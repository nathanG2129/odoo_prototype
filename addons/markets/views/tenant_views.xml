<odoo>
    <!-- Tenant Tree View -->
    <record id="view_tenant_tree" model="ir.ui.view">
        <field name="name">kst.tenant.tree</field>
        <field name="model">kst.tenant</field>
        <field name="arch" type="xml">
            <tree string="Tenants">
                <field name="name"/>
                <field name="date_started"/>
                <field name="date_end"/>
                <field name="active"/>
                <field name="stall_count"/>
            </tree>
        </field>
    </record>

    <!-- Tenant Form View -->
    <record id="view_tenant_form" model="ir.ui.view">
        <field name="name">kst.tenant.form</field>
        <field name="model">kst.tenant</field>
        <field name="arch" type="xml">
            <form string="Tenant">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_started"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                            <field name="active"/>
                            <field name="stall_count"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Stalls">
                            <field name="stall_ids">
                                <tree>
                                    <field name="market_id"/>
                                    <field name="code"/>
                                    <field name="rental_rate"/>
                                    <field name="is_active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group string="Audit Trail">
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created Date" readonly="1"/>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tenant Search View -->
    <record id="view_tenant_search" model="ir.ui.view">
        <field name="name">kst.tenant.search</field>
        <field name="model">kst.tenant</field>
        <field name="arch" type="xml">
            <search string="Tenants">
                <field name="name"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Tenant Kanban View -->
    <record id="view_tenant_kanban" model="ir.ui.view">
        <field name="name">kst.tenant.kanban</field>
        <field name="model">kst.tenant</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard">
                <field name="name"/>
                <field name="date_started"/>
                <field name="date_end"/>
                <field name="active"/>
                <field name="stall_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="active" widget="boolean_toggle"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="text-muted">Stalls:</span>
                                        <strong><field name="stall_count"/></strong>
                                    </div>
                                    <div class="mt-2" t-if="record.date_started.raw_value">
                                        <small class="text-muted">Started: </small>
                                        <field name="date_started"/>
                                    </div>
                                    <div class="mt-1" t-if="record.date_end.raw_value">
                                        <small class="text-muted">Ends: </small>
                                        <field name="date_end"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tenant Action -->
    <record id="action_tenant" model="ir.actions.act_window">
        <field name="name">Tenants</field>
        <field name="res_model">kst.tenant</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_active': True}</field>
    </record>
</odoo>

