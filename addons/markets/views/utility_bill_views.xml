<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_utility_bill_tree" model="ir.ui.view">
        <field name="name">kst.utility.bill.tree</field>
        <field name="model">kst.utility.bill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bill_date"/>
                <field name="utility_account_id"/>
                <field name="utility_type"/>
                <field name="collection_status" widget="badge" decoration-success="collection_status == 'verified'" decoration-warning="collection_status == 'check_bounced'" decoration-danger="collection_status == 'rejected'"/>
                <field name="period_covered_from"/>
                <field name="period_covered_to"/>
                <field name="total_consumption"/>
                <field name="total_bill_amount"/>
                <field name="derived_rate"/>
                <field name="due_date"/>
                <field name="transaction_count"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_utility_bill_form" model="ir.ui.view">
        <field name="name">kst.utility.bill.form</field>
        <field name="model">kst.utility.bill</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_transactions" type="object" string="Generate Transactions" 
                            class="oe_highlight"
                            confirm="This will generate transactions for all stalls assigned to this utility account. Existing transactions will be skipped. Continue?"
                            help="Automatically generate utility transactions for all stalls assigned to this utility account based on their payment frequencies (daily/weekly/monthly)"
                            attrs="{'invisible': [('collection_status', '!=', 'draft')]}"/>
                    <button name="action_publish" type="object" string="Publish" 
                            class="oe_highlight"
                            attrs="{'invisible': [('collection_status', '!=', 'draft')]}"
                            help="Publish the utility bill for collection"/>
                    <button name="action_verify" type="object" string="Verify" 
                            class="oe_highlight"
                            attrs="{'invisible': [('collection_status', '!=', 'published')]}"
                            help="Verify the utility bill after all payments are collected"/>
                    <button name="action_check_bounced" type="object" string="Check Bounced" 
                            attrs="{'invisible': [('collection_status', '!=', 'published')]}"
                            help="Mark bill as check bounced"/>
                    <button name="action_reject" type="object" string="Reject" 
                            attrs="{'invisible': [('collection_status', '!=', 'published')]}"
                            help="Reject the utility bill"/>
                    <field name="collection_status" widget="statusbar" statusbar_visible="draft,published,verified"/>
                </header>
                <sheet>
                    <group>
                        <group string="Utility Account">
                            <field name="utility_account_id"/>
                            <field name="utility_account_number" readonly="1"/>
                            <field name="utility_type" readonly="1"/>
                        </group>
                        <group string="Bill Information">
                            <field name="bill_date"/>
                            <field name="due_date"/>
                        </group>
                    </group>
                    <group string="Billing Period">
                        <group>
                            <field name="period_covered_from"/>
                            <field name="period_covered_to"/>
                        </group>
                        <group>
                            <!-- Empty group for layout -->
                        </group>
                    </group>
                    <group string="Billing Details">
                        <group>
                            <field name="total_consumption"/>
                            <field name="total_bill_amount"/>
                        </group>
                        <group>
                            <field name="derived_rate" readonly="1"/>
                            <field name="transaction_count" readonly="1"/>
                            <field name="stall_count" readonly="1"/>
                        </group>
                    </group>
                    <group string="Financial Summary">
                        <group>
                            <field name="total_amount_paid" readonly="1"/>
                            <field name="total_bill_amount" readonly="1"/>
                            <field name="profit_loss" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Utility Transactions" name="transactions">
                            <field name="transaction_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="transaction_date"/>
                                    <field name="stall_id"/>
                                    <field name="pay_type_frequency" string="Frequency"/>
                                    <field name="payment_status"/>
                                    <field name="verification_status" widget="badge" decoration-success="verification_status == 'verified'" decoration-warning="verification_status == 'check_bounced'" decoration-danger="verification_status == 'rejected'"/>
                                    <field name="is_absent"/>
                                    <field name="previous_reading"/>
                                    <field name="current_reading"/>
                                    <field name="consumption" sum="Total Consumption"/>
                                    <field name="applied_rate"/>
                                    <field name="amount_due" sum="Total Due"/>
                                    <field name="amount_paid" sum="Total Amount"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group string="Audit Information">
                        <group>
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created Date" readonly="1"/>
                        </group>
                        <group>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_utility_bill_search" model="ir.ui.view">
        <field name="name">kst.utility.bill.search</field>
        <field name="model">kst.utility.bill</field>
        <field name="arch" type="xml">
            <search>
                <field name="utility_account_id"/>
                <field name="utility_account_number"/>
                <field name="bill_date"/>
                <filter string="Electricity" name="filter_electricity" domain="[('utility_type', '=', 'electricity')]"/>
                <filter string="Water" name="filter_water" domain="[('utility_type', '=', 'water')]"/>
                <filter string="This Month" name="filter_this_month" domain="[('bill_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Draft" name="filter_draft" domain="[('collection_status', '=', 'draft')]"/>
                <filter string="Published" name="filter_published" domain="[('collection_status', '=', 'published')]"/>
                <filter string="Verified" name="filter_verified" domain="[('collection_status', '=', 'verified')]"/>
                <filter string="Check Bounced" name="filter_check_bounced" domain="[('collection_status', '=', 'check_bounced')]"/>
                <filter string="Rejected" name="filter_rejected" domain="[('collection_status', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="Utility Account" name="group_utility_account" context="{'group_by': 'utility_account_id'}"/>
                    <filter string="Utility Type" name="group_utility_type" context="{'group_by': 'utility_type'}"/>
                    <filter string="Collection Status" name="group_collection_status" context="{'group_by': 'collection_status'}"/>
                    <filter string="Bill Date" name="group_bill_date" context="{'group_by': 'bill_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_utility_bill" model="ir.actions.act_window">
        <field name="name">Utility Bills</field>
        <field name="res_model">kst.utility.bill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Utility Bill!
            </p>
            <p>
                Utility bills represent invoices from providers (MERALCO, Water companies) and are used to calculate derived rates for stall billing.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_utility_bill"
              name="Utility Bills"
              parent="menu_markets_transactions"
              action="action_utility_bill"
              sequence="30"/>
</odoo>

