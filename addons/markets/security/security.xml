<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- KST Markets Category -->
    <record id="module_category_kst" model="ir.module.category">
        <field name="name">KST</field>
        <field name="description">KST Statistics Modules</field>
        <field name="sequence">100</field>
    </record>

    <!-- Markets Cashier Group -->
    <record id="markets_group_cashier" model="res.groups">
        <field name="name">Markets / Cashier</field>
        <field name="category_id" ref="module_category_kst"/>
        <field name="comment">Cashiers can encode payments through billing views (Utility Bills). No direct access to transaction menus.</field>
    </record>

    <!-- Markets User Group (Read-only) -->
    <record id="markets_group_user" model="res.groups">
        <field name="name">Markets / User</field>
        <field name="category_id" ref="module_category_kst"/>
        <field name="comment">Users can view market data (read-only access)</field>
    </record>

    <!-- Markets Manager Group -->
    <record id="markets_group_manager" model="res.groups">
        <field name="name">Markets / Manager</field>
        <field name="category_id" ref="module_category_kst"/>
        <field name="implied_ids" eval="[(4, ref('markets_group_user'))]"/>
        <field name="comment">Managers have full access to all markets data including masterfiles, transactions, and verification</field>
    </record>
</odoo>

