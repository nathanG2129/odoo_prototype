<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payee Tree View -->
    <record id="view_payee_tree" model="ir.ui.view">
        <field name="name">kst.payee.tree</field>
        <field name="model">kst.payee</field>
        <field name="arch" type="xml">
            <tree string="Payees">
                <field name="name"/>
                <field name="tin"/>
            </tree>
        </field>
    </record>

    <!-- Payee Form View -->
    <record id="view_payee_form" model="ir.ui.view">
        <field name="name">kst.payee.form</field>
        <field name="model">kst.payee</field>
        <field name="arch" type="xml">
            <form string="Payee">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="tin"/>
                        </group>
                        <group string="Audit Trail">
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created Date" readonly="1"/>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Enter payee address..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Payee Search View -->
    <record id="view_payee_search" model="ir.ui.view">
        <field name="name">kst.payee.search</field>
        <field name="model">kst.payee</field>
        <field name="arch" type="xml">
            <search string="Search Payees">
                <field name="name"/>
                <field name="tin"/>
            </search>
        </field>
    </record>

    <!-- Payee Action -->
    <record id="action_payee" model="ir.actions.act_window">
        <field name="name">Payees</field>
        <field name="res_model">kst.payee</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>



