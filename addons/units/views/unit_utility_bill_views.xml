<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Unit Utility Bill Form View -->
    <record id="view_unit_utility_bill_form" model="ir.ui.view">
        <field name="name">kst.unit.utility.bill.form</field>
        <field name="model">kst.unit.utility.bill</field>
        <field name="arch" type="xml">
            <form string="Unit Utility Bill">
                <header>
                    <button name="action_generate_transactions" type="object" string="Generate Transactions" 
                            class="oe_highlight" attrs="{'invisible': [('collection_status', '!=', 'draft')]}"/>
                    <button name="action_publish" type="object" string="Publish" 
                            class="oe_highlight" attrs="{'invisible': [('collection_status', '!=', 'draft')]}"/>
                    <button name="action_verify" type="object" string="Verify" 
                            class="oe_highlight" attrs="{'invisible': [('collection_status', '!=', 'published')]}"/>
                    <button name="action_generate_soa" type="object" string="Generate SOA" 
                            attrs="{'invisible': [('has_underpayment', '=', False)]}"/>
                    <field name="collection_status" widget="statusbar" statusbar_visible="draft,published,verified"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(units.action_unit_utility_transaction)d" type="action" 
                                class="oe_stat_button" icon="fa-list"
                                context="{'default_utility_bill_id': active_id}">
                            <field name="transaction_count" widget="statinfo" string="Transactions"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="utility_type" readonly="1"/>
                            <span> Bill - </span>
                            <field name="utility_account_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Bill Information">
                            <field name="utility_account_id"/>
                            <field name="bill_date"/>
                            <field name="due_date"/>
                            <field name="unit_count" readonly="1"/>
                        </group>
                        <group string="Period Coverage">
                            <field name="period_covered_from"/>
                            <field name="period_covered_to"/>
                        </group>
                    </group>
                    <group>
                        <group string="Consumption &amp; Billing">
                            <field name="total_consumption"/>
                            <field name="total_bill_amount"/>
                            <field name="derived_rate" readonly="1"/>
                        </group>
                        <group string="Financial Summary">
                            <field name="total_amount_paid" readonly="1"/>
                            <field name="profit_loss" readonly="1" 
                                   decoration-success="profit_loss >= 0" 
                                   decoration-danger="profit_loss &lt; 0"/>
                            <field name="has_underpayment" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Utility Transactions" name="transactions">
                            <field name="transaction_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="transaction_date"/>
                                    <field name="unit_id"/>
                                    <field name="utility_type" readonly="1"/>
                                    <field name="previous_reading"/>
                                    <field name="current_reading"/>
                                    <field name="consumption" readonly="1"/>
                                    <field name="applied_rate"/>
                                    <field name="amount_due" readonly="1" sum="Total Due"/>
                                    <field name="amount_paid" sum="Total Paid"/>
                                    <field name="verification_status" widget="badge" 
                                           decoration-success="verification_status == 'verified'" 
                                           decoration-warning="verification_status == 'check_bounced'" 
                                           decoration-danger="verification_status == 'rejected'"/>
                                    <field name="receipt_number"/>
                                    <field name="attachment_count" widget="badge" optional="show"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Unit Utility Bill Tree View -->
    <record id="view_unit_utility_bill_tree" model="ir.ui.view">
        <field name="name">kst.unit.utility.bill.tree</field>
        <field name="model">kst.unit.utility.bill</field>
        <field name="arch" type="xml">
            <tree string="Unit Utility Bills" decoration-muted="collection_status == 'verified'">
                <field name="utility_type"/>
                <field name="utility_account_number"/>
                <field name="bill_date"/>
                <field name="due_date"/>
                <field name="period_covered_from"/>
                <field name="period_covered_to"/>
                <field name="total_consumption"/>
                <field name="total_bill_amount" sum="Total Bill"/>
                <field name="derived_rate"/>
                <field name="total_amount_paid" sum="Total Paid"/>
                <field name="profit_loss" sum="Total P&amp;L" 
                       decoration-success="profit_loss >= 0" 
                       decoration-danger="profit_loss &lt; 0"/>
                <field name="collection_status" widget="badge" 
                       decoration-info="collection_status == 'draft'" 
                       decoration-warning="collection_status == 'published'" 
                       decoration-success="collection_status == 'verified'"/>
                <field name="transaction_count"/>
            </tree>
        </field>
    </record>

    <!-- Unit Utility Bill Search View -->
    <record id="view_unit_utility_bill_search" model="ir.ui.view">
        <field name="name">kst.unit.utility.bill.search</field>
        <field name="model">kst.unit.utility.bill</field>
        <field name="arch" type="xml">
            <search string="Search Unit Utility Bills">
                <field name="utility_account_id"/>
                <field name="utility_account_number"/>
                <field name="utility_type"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('collection_status', '=', 'draft')]"/>
                <filter string="Published" name="published" domain="[('collection_status', '=', 'published')]"/>
                <filter string="Verified" name="verified" domain="[('collection_status', '=', 'verified')]"/>
                <separator/>
                <filter string="Electricity" name="electricity" domain="[('utility_type', '=', 'electricity')]"/>
                <filter string="Water" name="water" domain="[('utility_type', '=', 'water')]"/>
                <group expand="0" string="Group By">
                    <filter string="Utility Type" name="group_utility_type" context="{'group_by': 'utility_type'}"/>
                    <filter string="Utility Account" name="group_account" context="{'group_by': 'utility_account_id'}"/>
                    <filter string="Bill Date" name="group_bill_date" context="{'group_by': 'bill_date:month'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'collection_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Unit Utility Bill Action -->
    <record id="action_unit_utility_bill" model="ir.actions.act_window">
        <field name="name">Unit Utility Bills</field>
        <field name="res_model">kst.unit.utility.bill</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_unit_utility_bill_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first unit utility bill
            </p>
            <p>
                Utility bills group utility transactions for units under a shared utility account.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_unit_utility_bill" name="Utility Bills" 
              parent="menu_unit_utility_root" 
              action="action_unit_utility_bill" sequence="10"/>
</odoo>

