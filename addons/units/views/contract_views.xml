<odoo>
    <!-- Contract Tree View -->
    <record id="view_contract_tree" model="ir.ui.view">
        <field name="name">kst.contract.tree</field>
        <field name="model">kst.contract</field>
        <field name="arch" type="xml">
            <tree string="Contracts">
                <field name="contract_number"/>
                <field name="unit_id"/>
                <field name="lessee_id"/>
                <field name="lessor_id"/>
                <field name="period_from"/>
                <field name="period_to"/>
                <field name="monthly_rate" sum="Total Monthly Rate"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Contract Form View -->
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">kst.contract.form</field>
        <field name="model">kst.contract</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <sheet>
                    <group>
                        <group string="Contract Information">
                            <field name="contract_number"/>
                            <field name="unit_id"/>
                            <field name="lessee_id"/>
                            <field name="lessor_id"/>
                        </group>
                        <group string="Period">
                            <field name="period_from"/>
                            <field name="period_to"/>
                            <field name="status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Rent Calculation">
                            <field name="basic_rent"/>
                            <field name="evat"/>
                            <field name="withholding_tax"/>
                            <field name="mptr"/>
                            <field name="monthly_rate" readonly="1"/>
                        </group>
                        <group string="Additional Rates">
                            <field name="cusa_rate"/>
                        </group>
                    </group>
                    <group>
                        <group string="Escalation Terms">
                            <field name="escalation_percentage"/>
                            <field name="escalation_date_months"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional contract notes..."/>
                    </group>
                    <notebook>
                        <page string="Rent Transactions">
                            <field name="transaction_ids">
                                <tree>
                                    <field name="transaction_date"/>
                                    <field name="payment_status"/>
                                    <field name="payment_category"/>
                                    <field name="amount_deposited" sum="Total Amount"/>
                                    <field name="is_bounced"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group string="Audit Trail">
                            <field name="create_uid" string="Filed By" readonly="1"/>
                            <field name="create_date" string="Filed Date" readonly="1"/>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Contract Search View -->
    <record id="view_contract_search" model="ir.ui.view">
        <field name="name">kst.contract.search</field>
        <field name="model">kst.contract</field>
        <field name="arch" type="xml">
            <search string="Contracts">
                <field name="contract_number"/>
                <field name="unit_id"/>
                <field name="lessee_id"/>
                <field name="lessor_id"/>
                <filter name="active" string="Active" domain="[('status', '=', 'active')]"/>
                <filter name="pending" string="Pending" domain="[('status', '=', 'pending')]"/>
                <filter name="expired" string="Expired" domain="[('status', '=', 'expired')]"/>
                <filter name="terminated" string="Terminated" domain="[('status', '=', 'terminated')]"/>
                <group expand="0">
                    <filter name="group_by_status" string="Status" context="{'group_by':'status'}"/>
                    <filter name="group_by_unit" string="Unit" context="{'group_by':'unit_id'}"/>
                    <filter name="group_by_lessee" string="Lessee" context="{'group_by':'lessee_id'}"/>
                    <filter name="group_by_lessor" string="Lessor" context="{'group_by':'lessor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Contract Action -->
    <record id="action_contract" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">kst.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': True}</field>
    </record>
</odoo>

