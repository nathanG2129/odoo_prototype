<odoo>
    <!-- KCode Tree View -->
    <record id="view_kcode_tree" model="ir.ui.view">
        <field name="name">kst.kcode.tree</field>
        <field name="model">kst.kcode</field>
        <field name="arch" type="xml">
            <tree string="KCodes">
                <field name="code"/>
            </tree>
        </field>
    </record>

    <!-- KCode Form View -->
    <record id="view_kcode_form" model="ir.ui.view">
        <field name="name">kst.kcode.form</field>
        <field name="model">kst.kcode</field>
        <field name="arch" type="xml">
            <form string="KCode">
                <sheet>
                    <group>
                        <field name="code"/>
                    </group>
                    <group>
                        <group string="Audit Trail">
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created Date" readonly="1"/>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- KCode Search View -->
    <record id="view_kcode_search" model="ir.ui.view">
        <field name="name">kst.kcode.search</field>
        <field name="model">kst.kcode</field>
        <field name="arch" type="xml">
            <search string="KCodes">
                <field name="code"/>
            </search>
        </field>
    </record>

    <!-- KCode Action -->
    <record id="action_kcode" model="ir.actions.act_window">
        <field name="name">KCodes</field>
        <field name="res_model">kst.kcode</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_kcode" 
              name="KCodes" 
              parent="menu_kst_base_config"
              action="action_kcode"
              sequence="20"/>
</odoo>


