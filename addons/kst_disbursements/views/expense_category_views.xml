<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Expense Category Tree View -->
    <record id="view_expense_category_tree" model="ir.ui.view">
        <field name="name">kst.expense.category.tree</field>
        <field name="model">kst.expense.category</field>
        <field name="arch" type="xml">
            <tree string="Expense Categories">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Expense Category Form View -->
    <record id="view_expense_category_form" model="ir.ui.view">
        <field name="name">kst.expense.category.form</field>
        <field name="model">kst.expense.category</field>
        <field name="arch" type="xml">
            <form string="Expense Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group string="Audit Trail">
                            <field name="create_uid" string="Created By" readonly="1"/>
                            <field name="create_date" string="Created Date" readonly="1"/>
                            <field name="write_uid" string="Modified By" readonly="1"/>
                            <field name="write_date" string="Modified Date" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Expense Category Search View -->
    <record id="view_expense_category_search" model="ir.ui.view">
        <field name="name">kst.expense.category.search</field>
        <field name="model">kst.expense.category</field>
        <field name="arch" type="xml">
            <search string="Search Expense Categories">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Expense Category Action -->
    <record id="action_expense_category" model="ir.actions.act_window">
        <field name="name">Expense Categories</field>
        <field name="res_model">kst.expense.category</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>



